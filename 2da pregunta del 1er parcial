// 2da pregunta examen parcial1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	int n,x,i;
	float s;
	s=0;
	i=1;
	do{
		cout<<"ingrese X"<<endl;
		cin>>x;
	}while(x<0);
	do{
		cout<<"ingrese n"<<endl;
		cin>>n;
	}while(n<0);
	do{
		s=s+powf((1+(1.0/i)),x);
		i++;
	}while(i<+n);
	cout<<"el resultado es:"<<s<<endl;
	getch();
}
